        {"name":"tmpdir","required":"no","default":"."},
        {"name":"logdir","required":"no","default":"."},
        {"name":"reposdir","required":"no","default":"."},
	{"name":"samtools_executable","required":"no","default":"samtools"},
	{"name":"bwa_executable","required":"no","default":"bwa0_6"},
	{"name":"aligner_numthreads","required":"no","default":"2"},
	{"name":"bam_ext","required":"no","default":".bam"},
	{"name":"cram_ext","required":"no","default":".cram"},
        {"name":"alignment_method","required":"yes"},
	{"name":"alignment_reference_genome_name","required":"yes"},
